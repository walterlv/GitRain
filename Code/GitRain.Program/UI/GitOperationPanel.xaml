                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Grid.Column="1" FontSize="40"
                       Text="{Binding (Frame.Content).(Page.Title), ElementName=GitFrame}"
                       FontWeight="Thin" TextTrimming="CharacterEllipsis"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <Frame x:Name="GitFrame" Grid.Row="1" Grid.Column="0" NavigationUIVisibility="Hidden">
            <Frame.Content>
                <ui:CreateOrCloneRepoPage/>
            </Frame.Content>
        </Frame>
