        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Width="48" Height="48" Margin="24 0" Command="{x:Static data:GlobalCommands.BackToRepo}"
                    WindowChrome.IsHitTestVisibleInChrome="True">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="Transparent">
                            <Path Name="Icon" Data="{StaticResource BackGeometry}" Stretch="Uniform"
                                  Fill="{DynamicResource Theme.Brush.Accent}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Icon" Property="Data" Value="{StaticResource BackGeometry2}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Icon" Property="Data" Value="{StaticResource BackGeometry2}"/>
